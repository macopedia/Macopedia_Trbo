<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <macopedia translate="label" module="macopedia_trbo">
            <label>Macopedia</label>
            <sort_order>10</sort_order>
        </macopedia>
    </tabs>
    <sections>
        <macopedia_trbo translate="label" module="macopedia_trbo">
            <label>Trbo integration</label>
            <tab>macopedia</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable Trbo integration</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <js_name>
                            <label>Enter your JS code file name</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Take this from code snippet "c.src=document.location.protocol+"//static.trbo.com/plugin/((THIS PART)).js";"]]></comment>
                            <sort_order>20-</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </js_name>
                        <product_attribute_code translate="label comment" module="hevelop_facebookpixel">
                            <label>Attribute used for product ID</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>macopedia_trbo/adminhtml_system_config_source_attributes</source_model>
                        </product_attribute_code>
                    </fields>
                </general>
            </groups>
        </macopedia_trbo>
    </sections>
</config>
